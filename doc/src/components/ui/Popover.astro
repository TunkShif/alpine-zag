---
import XIcon from "@/components/icons/XIcon.astro"
---

<script>
  import { normalizeProps, useAPI, useMachine } from "@tunkshif/alpine-zag"
  import { id } from "@/utils"
  import * as popover from "@zag-js/popover"
  import Alpine from "alpinejs"

  window.addEventListener("alpine:init", () => {
    Alpine.data("Popover", () => {
      const service = useMachine(Alpine, popover.machine({ id: id(), positioning: { flip: true } }))
      const api = useAPI(Alpine, () =>
        popover.connect(service.state.value, service.send, normalizeProps)
      )
      return {
        init() {
          service.start()
          api.start()
        },
        destroy() {
          api.stop()
          service.stop()
        },
        get api() {
          return api.value
        }
      }
    })
  })
</script>

<div x-data="Popover">
  <div x-props="api.triggerProps" class="flex">
    <slot name="trigger" />
  </div>
  <div x-props="api.positionerProps">
    <div x-cloak x-props="api.contentProps">
      <h3 class="font-medium mb-2">
        <slot name="title" />
      </h3>
      <slot name="content" />
      <button type="button" x-props="api.closeTriggerProps">
        <XIcon class="w-4 h-4" />
      </button>
    </div>
  </div>
</div>

<style>
  [data-part="content"] {
    @apply relative z-[1400] min-w-64 bg-white border border-slate-200/40 p-4 rounded-md shadow-md;
  }

  [data-part="content"][data-state="open"] {
    animation: fade-in 200ms ease-in-out;
  }

  [data-part="close-trigger"] {
    @apply absolute p-1 top-2.5 right-2.5 hover:bg-slate-200/60 text-slate-500 rounded-md;
  }
</style>
